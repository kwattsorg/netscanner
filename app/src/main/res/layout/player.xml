<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/player_main_layout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#3b3131"
	android:scaleGravity="bottom">


	<ImageButton
		android:id="@+id/play_imagebutton"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:onClick="playClickHandler"
		android:src="@drawable/button_play" />


	<TextView
		android:id="@+id/player_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/play_imagebutton"
		android:layout_toEndOf="@+id/play_imagebutton"
		android:layout_marginStart="5dp"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="22sp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textSize="15sp" />

	<TextView
		android:id="@+id/player_header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/player_status"
		android:layout_marginStart="5dp"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="22sp"
		android:layout_toEndOf="@+id/play_imagebutton"
		android:text="SFO Airport"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#ffffffff"
		android:textSize="15sp" />

	<TextView
		android:id="@+id/player_genre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/player_header"
		android:layout_marginTop="0sp"
		android:layout_marginStart="5sp"
		android:layout_marginEnd="22sp"
		android:layout_toEndOf="@+id/play_imagebutton"
		android:text="Easy Listening"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#ffffffff"
		android:textSize="10sp" />

	<TextView
		android:id="@+id/player_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/player_genre"
		android:layout_marginStart="5sp"
		android:layout_marginTop="0sp"
		android:layout_marginEnd="22sp"
		android:layout_toEndOf="@+id/play_imagebutton"
		android:text="SF, CA"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#ffffffff"
		android:textSize="10sp" />

